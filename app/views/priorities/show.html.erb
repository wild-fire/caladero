<h1><%= t("enumerize.priority.#{@priority}") %></h1>
<% @papers_with_categories.each do |category, papers| %>


  <h2 class='<%= papers.detect(&:unread).present? ? 'unread' : 'read'%>'>
    <%= link_to category.name, category_path(category) %>
    <% if papers.detect(&:unread).present? %>
      [<%= number_to_score papers_score papers %>]
    <% end -%>
  </h2>

  <ul>
    <% papers.each do |paper| %>
      <li class='<%= paper.read? ? 'read' : 'unread'%>'><%= link_to paper.title, paper_path(paper) %> [<%= number_to_score paper.score %>]</li>
    <% end %>
  </ul>
<% end %>

